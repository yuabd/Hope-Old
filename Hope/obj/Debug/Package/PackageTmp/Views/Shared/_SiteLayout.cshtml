<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
	<link href="/App_Themes/Site/Style.css" rel="stylesheet" type="text/css" />
	@RenderSection("head", false)
</head>
<body>
	<div id="header">
		<div class="warp">
			<div id="logo" class="f_l">
				<h1><a href="/">微心愿认领</a></h1>
			</div>
			<div id="logo-picture" class="f_l">
				<img src="/Content/images/header-picture.jpg" alt="" />
			</div>
		</div>
	</div>
    <div id="main-content">
		<div class="warp" style="padding-bottom: 30px; background: #fff;">
			@RenderBody()
		</div>
		<div id="footer">
			<div class="warp" style="height: 222px; padding-top: 30px;">
				<center>
					<p><a href="/admin/wish/index" style="color: #33221a;">管理愿望</a></p>
				</center>
			</div>
		</div>
    </div>
	<script src="/Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
	@RenderSection("scripts", false)
</body>
</html>
